apiVersion: config.openshift.io/v1
kind: OAuth
metadata:
  name: cluster
spec:
  tokenConfig:
    accessTokenMaxAgeSeconds: 2700
  identityProviders:
  - mappingMethod: add
    name: openid
    openID:
      claims:
        email:
        - email
        name:
        - name
        preferredUsername:
        - preferred_username
      clientID: ${clientID}
      clientSecret:
        name: google-openid-client-secret
      extraScopes: []
      issuer: ${issuer}
    type: OpenID
